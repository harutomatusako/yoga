<%= @user.name %>さんの詳細ページ

<%= @user.name %>
<%= @user.detail%>
<img src=<%= @user.image %> class = "icon_image">

<% if @user.id == current_user.id %>
  <%= link_to "編集する", edit_user_path(current_user.id)  %>
<% end %>

イベント参加履歴
<% @event_joins = EventJoin.where(user_id: current_user.id).where.not(status: 'キャンセル') %>
<% @event_joins.each do | join | %>
  <%= join.event.title %><br>
<% end %>

<% @events.each do | event | %>

 <%= link_to event.title, user_join_user_path(:event_id => event.id) %>
<% end %>

<% unless @user.id == current_user.id %>
   <% if @haveRoom == true %>
     <%= link_to "ダイレクトメッセージ", room_path(@roomId) %>
   <% else %>
     <%= form_with model: @room, local: true do |f|%>
       <%= fields_for @RoomUser do |r| %>
         <%= r.hidden_field :user_id, value: @user.id %>
       <% end %>
       <%= f.submit "チャットを始める" %>
     <% end %>
   <% end %>
<% end %>

