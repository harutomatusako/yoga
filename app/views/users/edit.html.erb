<%= @user.name %>さんの編集ページ

<%= form_with model:@user,url: user_path(@user.id), local:true do |f| %>
 <%= f.label "氏名" %>
 <%= f.text_field :name, autofocus: true %>
 
 <%= f.label "自己紹介" %>
 <%= f.text_field :detail, autofocus: true %>
 
 <%= f.label "イメージ写真" %>
 <img src=<%= @user.image %> class = "icon_image">
 <%= f.file_field :image %>
 
 <%= f.submit '変更を保存' %>
<% end %>