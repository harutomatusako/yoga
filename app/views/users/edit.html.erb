
<div class="container text-center ">
 <div class="row mt-5 font-weight-bold h4">
  <div class="col mb-5">
   編集ページ
    <%= form_with model:@user,url: user_path(@user.id), local:true do |f| %>
  </div>
 </div>
 <div class="row  mt-4">
  <div class="col">
   <div class="row justify-content-center">
    <div class="col">
     <img src=<%= @user.image %> class = "icon_image">
    </div>
   </div>
   <div class="row mt-5 ">
    <div class="col text-right">
     <%= f.file_field :image %>
    </div>
   </div>
  </div>
  <div class="col my_page">
   <div class="row">
    <%= f.label "氏名" %>
    <%= f.text_field :name, autofocus: true %>
   </div>
   <div class="row mt-5">
    <%= f.label "自己紹介" %>
    <%= f.text_area :detail, autofocus: true,size: "30x5" %>
   </div>
  </div>
 </div>

 <div class="col text-center mt-5">
  <%= f.submit '変更を保存' %>
 </div>
  <% end %>
</div>

