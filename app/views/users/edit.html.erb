


<div class="container">
 <div class="row">
  <div class="col font-weight-bold h4 mt-5 text-left">
  編集ページ
  </div>
 </div>
 <%= form_with model:@user,url: user_path(@user.id), local:true do |f| %>
 <div class="row">
  <div class="col-4 mt-5 text-left">
  <dl>
   <dt><%= attachment_image_tag @user, :image, format: 'png', size: "500x400", class: "icon_image"%></dt>
   <dd class="mt-2"><%= f.file_field :image %></dd>
  </dl>
  </div>

  <div class="col mt-5 text-left">
   <dl>
    <dt class="mb-5">
     <%= f.label "氏名" %>
     <%= f.text_field :name, autofocus: true %>
    </dt>
    <dt>
     <%= f.label "自己紹介" %>
     <%= f.text_area :detail, autofocus: true,size: "30x5" %>
    </dt>
   </dl>
  </div>
 </div>
 <div class="row">
  <div class="col-8 mt-5 text-right">
   <%= f.submit '変更を保存' %>
  </div>
 </div>
 <% end %>

</div>



