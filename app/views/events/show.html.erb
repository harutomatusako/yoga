<% if @user.id === current_user.id %>
 <%= link_to "編集", edit_event_path(@event) %>
 <%= link_to "削除", event_path(@event), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>

<% if @event.joined(current_user) == false && @user.id != current_user.id %>
 <%= form_with model: @event_join,url: event_joins_path, local:true do |f| %>
  <%= f.submit "参加する" %>
  <%= f.hidden_field :event_id, value:@event.id %>
 <% end %>
<% end %>

<% if @event.joined(current_user) == true %>
 <%= link_to "参加キャンセル", event_join_path(@event_join), method: :patch, "data-confirm" => "本当に参加キャンセルしますか？" %>
<% end %>
